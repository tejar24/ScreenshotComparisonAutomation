{
  "manifest_version": 3,
  "name": "TakeScreenshotWithDOMCoordinates",
  "version": "1.0",
  "description": "Capture screenshots with DOM coordinates for SPAs.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Capture Screenshot"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/dom-helpers.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
